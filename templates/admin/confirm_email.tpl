
<h2>Review your message before continuing</h2>

<table>
  <tr>
    <th>From</th>
    <td>{FROM}</td>
  </tr>
  <tr>
    <th>To</th>
    <td>{LIST}</td>
  </tr>
  <tr>
    <th>Subject</th>
    <td>{SUBJECT}</td>
  </tr>
  <tr>
    <th>Message</th>
    <td>{MESSAGE}</td>
  </tr>
</table>

<div class="container">
  <div class="row">
    <div class="col-md-4 col-sm-2">
      {BACK_START}
      <button type="submit" class="btn btn-default btn-lg" name="submit_form" id="back_submit_form"><i class="fa fa-chevron-left">Edit</i></button>
      {BACK_END}
    </div>
    <div class="col-md-4 col-sm-2">
      {FORWARD_START}
      <button type="submit" class="btn btn-success btn-lg" name="submit_form" id="forward_submit_form">Send<i class="fa fa-chevron-right"></i></button>
      {FORWARD_END}
    </div>
  </div>
</div>
