{START_FORM}
<h2>Compose your message:</h2>

<div class="col-md-12">
  <div class="row">
    <label>
      {LIST_LABEL}
    </label>
  </div>
  <div class="row">
    <div class="col-md-5">
      {LIST}
    </div>
  </div>

  <div class="row">
    <label>
      {SUBJECT_LABEL}
    </label>
  </div>
  <div class="row">
    <div class="col-md-5">
      {SUBJECT}
    </div>
  </div>

  <div class="row">
    <label>
      {MESSAGE_LABEL}
    </label>
  </div>
  <div class="row">
    <div class="col-md-10">
      {MESSAGE}
    </div>
  </div>

  <p></p>

  <div class="row">
    <button type="submit" class="btn btn-lg btn-success">
      Submit
      <i class="fa fa-chevron-right"></i>
    </button>
  </div>
</div>


{END_FORM}
